{
  "compilerOptions": {
    "sourceMap": true,
    "noEmitOnError": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "baseUrl": "./src",
    "module": "nodenext",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
  "paths": {
    "#root/*": ["*"],
  }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}