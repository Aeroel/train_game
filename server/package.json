{
    "type": "module",
    "dependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "express": "^5.1.0",
        "socket.io": "^4.8.1",
        "source-map-support": "^0.5.21"
    },
    "imports": {
        "#root/*": "./src/*"
    },
    "devDependencies": {
        "tsx": "^4.20.4",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "devtsc": "tsc --watch --noEmit",

        "devserver": "pnpm run devservertsx",
        "devservertsx": "tsx watch --clear-screen=false src/startThisToStartTheGameServer.ts", "devservernode": "node --watch --enable-source-maps build/startThisToStartTheGameServer.js",

        "devserverprof": "pnpm run devservertsxprof",
        "devservertsxprof": "tsx watch --prof --clear-screen=false src/startThisToStartTheGameServer.ts",
        "devservernodeprof": "node --prof --watch --enable-source-maps build/startThisToStartTheGameServer.js"
    }
}
